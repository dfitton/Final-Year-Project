@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<script>
    function Update() {
        var agreed = document.getElementById("checkboxAgree").checked;

        document.getElementById("btnRegister").disabled = !agreed;
    }
</script>

<div class="row">
    <div class="col-md-6">
        <section>
            <h2>Register New Account</h2>
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <b>Email Address</b>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <b>Password</b>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <b>Confirm Password</b>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label><input id="checkboxAgree" onclick="Update()" type="checkbox" /> I understand that my data will be stored and shared anonymously</label>
                </div>
                <button id="btnRegister" type="submit" disabled class="btn btn-success">Register</button>
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
            </form>
            
        </section>
    </div><div class="col-md-5 col-md-offset-1">
    <section>
        <br />
        <h3>Testing Accounts</h3>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
