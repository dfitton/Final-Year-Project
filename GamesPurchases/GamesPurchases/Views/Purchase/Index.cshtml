                                else if (ViewBag.Sort == 6)
                                {
                                    @Html.ActionLink("Purchase Date ⯅", "Index", new { s = 5 })
                                }
                                else
                                {
                                    @Html.ActionLink("Purchase Date", "Index", new { s = 5 })
                                }
                            }
                        </th>
                        <th style="width: 100px; text-align: center">
                            @{
                                if (ViewBag.Sort == 11)
                                {
                                    @Html.ActionLink("RRP ⯆", "Index", new { s = 12 })
                                }
                                else if (ViewBag.Sort == 12)
                                {
                                    @Html.ActionLink("RRP ⯅", "Index", new { s = 11 })
                                }
                                else
                                {
                                    @Html.ActionLink("RRP", "Index", new { s = 11 })
                                }
                            }
                        </th>
                        <th style="width: 100px; text-align: center">
                            @{
                                if (ViewBag.Sort == 7)
                                {
