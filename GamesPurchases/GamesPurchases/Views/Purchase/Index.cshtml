                                    @Html.ActionLink("Game ⯅", "Index", new { s = 3 })
                                }
                                else
                                {
                                    @Html.ActionLink("Game", "Index", new { s = 3 })
                                }
                            }
                        </th>
                        <th style="width: 150px; text-align: center">
                            @{
                                if (ViewBag.Sort == 9)
